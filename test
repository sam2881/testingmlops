def generate_select_statements(column_names):
    """Generate select statements for specified columns."""
    select_statements = []
    for column in column_names:
        select_statements.append(f"df.select('{column}')")
    return select_statements
select_statements = generate_select_statements(column_names)

# Create new DataFrame by chaining select statements
new_df = eval(".".join(select_statements))

# Show the new DataFrame
new_df.show()
