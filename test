def generate_multiline_select_chain(column_names):
    """Generate a multiline sequence of select statements."""
    select_statements = [f"    col('{col}')," for col in column_names]
    multiline_select_chain = "\n".join(select_statements)
    return f"df.select(\n{multiline_select_chain}\n)"

# Example usage
column_names = ['column1', 'column2', 'column3']
multiline_select_chain = generate_multiline_select_chain(column_names)
print(multiline_select_chain)
