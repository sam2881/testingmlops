def print_select_statement(df):
    """Print a DataFrame select statement with aliases for each column."""
    # Assuming generate_select_expression returns a DataFrame with the desired alias
    aliased_df = generate_select_expression(df)
    select_statement = "df.select(\n"
    for column in aliased_df.columns:
        select_statement += f"    col('{column}').alias('{column}'),\n"
    select_statement = select_statement.rstrip(',\n') + '\n)'
    print(select_statement)

# Use the function on your DataFrame
print_select_statement(df)
